<%= form_for @icon, html: { multipart: true } do |f| %>

 <% if @icon.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@icon.errors.count, "error") %> prohibited
        this icon from being saved:
      </h2>
      <ul>
        <% @icon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :item_level %><br>
<%= f.select :item_level, [['Professional','Professional'],['Student','Student']] %>  </div>

  <div class="form-group">
    <%= f.label :category %><br>
<%= f.select :category, [['Icons','Icons'],['Logos','Logos'],['Fonts','Fonts'],['Textures','Textures'],['Vectors','Vectors'],['Graphicss','Graphicss'],['ePublishing','ePublishing']] %> 
 </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

<div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="form-group"> 	
    <%= f.label :file %><br>
    <%= f.file_field :file %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image%>
  </div>


  <div class="form-group">
      <%= f.label :layered %><br>
      Yes<%= f.radio_button :layered, 'Yes' %>
      No<%= f.radio_button :layered, 'No' %>
  </div>


  <div class="form-group">
      <%= f.label :layout %><br>
      <%= f.select :layout, [['None','None'],['Fixed','Fixed'],['Liquid','Liquid'],['Responsive','Responsive']] %>
  </div>

  <div class="form-group">
      <%= f.label :high_resolution %><br>
      Yes<%= f.radio_button :high_resolution, 'Yes' %>
      No<%= f.radio_button :high_resolution, 'No' %>
  </div>

  <div class="form-group">
    <%= f.label :live_demo %><br>
    <%= f.text_field :live_demo%>
  </div>

  <div class="form-group">
    <%= f.label :tags %><br>
    <%= f.text_area :tags%>
  </div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price%>
  </div>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment%>
  </div>

  <div class="form-group">
    <%= f.label :licence %><br>
    <%= f.radio_button :licence, 'OK' %>I accept the licemnce agreement.
  </div>

  <div class="form-group">
        <%= f.submit 'Upload icons' %>
    </div>
<% end %>